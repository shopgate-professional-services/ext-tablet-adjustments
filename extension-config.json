{
  "version": "1.2.1",
  "id": "@shopgate-project/tablet-adjustments",
  "components": [
    {
      "id": "ProductItemPrice",
      "path": "frontend/portals/Media/index.jsx",
      "target": "component.product-media-section",
      "type": "portals"
    },
    {
      "id": "ProductHeader",
      "path": "frontend/portals/ProductHeader/index.jsx",
      "target": "product.header",
      "type": "portals"
    },
    {
      "id": "PaymentBar",
      "path": "frontend/portals/PaymentBar/index.jsx",
      "target": "cart.payment-bar",
      "type": "portals"
    },
    {
      "id": "Nullify",
      "path": "frontend/portals/Nullify/index.jsx",
      "target": [
        "product.add-to-cart-bar",
        "product.ctas.favorites"
      ],
      "type": "portals"
    }
  ],
  "configuration": {
    "colorPdpBox": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "type": "text" ,
        "label": "Background color of the right box on PDP"
      }
    }
  }
}
